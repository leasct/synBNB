{% extends "base.html.twig" %}

{% block title %} {{ad.title}} {% endblock %}
{% block body %}

<div class="Ad-title" style="background-image: url({{ad.coverImage}})">

    <div class="container">

        <h1> {{ad.title}} </h1>

        <p> {{ad.introduction}}</p>
        <p class="h2"> <strong> {{ad.rooms}} chambre </strong>,
            pour <strong> {{ad.price}}€ </strong> la nuit</p>

        <a class="btn btn-primary" href="{{path("booking_create",{'slug' : ad.slug})}}">
            <button class="btn btn-primary">Réserver ! </button>
        </a>
        {% if app.user and app.user is same as (ad.author) %}

        <a href="{{path("ads_edit",{'slug' : ad.slug})}}">
            <button class="btn btn-primary"> Modifier </button>
        </a>

        <a href="{{path('ads_delete',{'slug' : ad.slug})}}">
            <button class="btn btn-danger"
                onclick="return confirm(`Etes vous sur de vouloir supprimer l'annonce ? : {{ad.title}} ?`)">
                Supprimer</button>
        </a>
        {% endif %}
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-8 mb-3">
            {{ad.content | raw}}
            <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    {% for images in ad.images %}

                    <li data-target="#carouselExampleCaptions" data-slide-to="{{loop.index0}}" {% if loop.first %}
                        class="active" {% endif %}></li>
                    {% endfor %}
                </ol>
                <div class="carousel-inner">
                    {% for image in ad.images %}

                    <div class="carousel-item {% if loop.first %} active {% endif %}">
                        <img src="{{image.url}}" class="d-block w-100" alt="azerty">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>{{ad.title}}</h5>
                            <p>{{image.caption}}</p>
                        </div>
                    </div>

                    {% endfor %}
                </div>
                <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col">
            {% set a = ad.author %}
            {% set slugUser = path("user_show",{'slug' : a.slug}) %}

            <div class="row">
                <div class="col-3">
                    <a href="{{slugUser}}">
                        <img src="{{a.picture}}" class="avatar avatar-medium" alt="image de l'avatar de {{a.fullName}}">
                    </a>
                </div>
                <div class="col">
                    <a href="{{slugUser}}">
                        <h3> {{a.fullName}}</h3>
                    </a>
                    <span class="badge badge-primary" href="{{slugUser}}"> {{ a.ads | length }} annonces</span>
                </div>
            </div>
            <p>{{ad.author.description | raw}}</p>
        </div>
    </div>
</div>

{% endblock %}